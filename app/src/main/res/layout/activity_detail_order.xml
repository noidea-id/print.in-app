                    android:text="-"/>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/box_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/border_bottom">
            <TextView
                android:id="@+id/kupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginBottom="5dp"
                android:text="Punya kode promo?"/>
            <TextView
                android:id="@+id/total_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/total_harga"
                android:layout_marginRight="10dp"
                android:text="Total"/>
            <TextView
                android:id="@+id/total_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:text="Rp 24.000"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@color/colorPrimary"
        android:layout_height="45dp"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/selesai"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/button_next_rincian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesaikan Pemesanan"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
