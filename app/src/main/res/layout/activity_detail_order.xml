        <RelativeLayout
            android:id="@+id/box_pesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/border_bottom">
            <TextView
                android:id="@+id/title_pesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:text="Pesanan"/>
            <RelativeLayout
                android:id="@+id/box_pesanan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/title_pesanan">
                <TextView
                    android:id="@+id/nama_pesanan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/harga_pesanan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:text="-"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/box_pesanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/box_pesanan1">
