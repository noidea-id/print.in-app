<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.noidea.printin.DetailOrderActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextAppearance="?attr/titleTextAppearance"
            android:background="?attr/colorPrimary">
            <TextView
                android:id="@+id/label_toolbar"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Pemesanan"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/box_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/border_bottom">
            <TextView
                android:id="@+id/title_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textAllCaps="true"
                android:layout_marginBottom="5dp"
                android:text="Nama Pemesan"/>
            <TextView
                android:id="@+id/nama"
                android:layout_below="@+id/title_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Ziady Mubaraq"/>
            <Button
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer"
                android:textSize="15sp"
                android:textAllCaps="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorWhite"
                android:clickable="false"
                android:backgroundTint="@color/colorPrimaryDark"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/box_hari"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/border_bottom">
                <TextView
                    android:id="@+id/title_hari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textAllCaps="true"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:text="Hari"/>
                <TextView
                    android:id="@+id/hari"
                    android:layout_below="@+id/title_hari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Sabtu"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/box_tanggal"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/border_bottom">
                <TextView
                    android:id="@+id/title_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textAllCaps="true"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:text="Tanggal"/>
                <TextView
                    android:id="@+id/tanggal"
                    android:layout_below="@+id/title_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="10/02/2018"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/box_jam"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/border_bottom">
                <TextView
                    android:id="@+id/title_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textAllCaps="true"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:text="Jam"/>
                <TextView
                    android:id="@+id/jam"
                    android:layout_below="@+id/title_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="12.00 WIB"/>
            </RelativeLayout>
        </LinearLayout>
